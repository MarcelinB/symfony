<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
														           and uncomment the following Encore helpers to start using Symfony UX #}
		<link rel="stylesheet" href="https://bootswatch.com/5/quartz/bootstrap.min.css">
		{% block stylesheets %}
			{#{{ encore_entry_link_tags('app') }}#}
		{% endblock %}

	</head>
	<body>
		<div>
			<button>
				<a class="dropdown-item" href="{{ path(app.request.attributes.get('_route'), {_locale: 'en'}) }}">English</a>
			</button>
			<button>
				<a class="dropdown-item" href="{{ path(app.request.attributes.get('_route'), {_locale: 'fr'}) }}">French</a>
			</button>
		</div>
		{% if is_granted('IS_AUTHENTICATED_FULLY') %}
			<p>Vous êtes connecté en tant que :
				{{ app.user.email }}</p>
			<a href="{{ path('app_logout') }}">Logout</a>
		{% endif %}
		{% block body %}{% endblock %}
	</body>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
	{% block javascripts %}
		{#{{ encore_entry_script_tags('app') }}#}
	{% endblock %}
</html>
